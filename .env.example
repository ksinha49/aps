# ── LLM Provider ─────────────────────────────────────────────────
# Options: bedrock, openai, ollama, litellm
SCOUT_LLM_PROVIDER=ollama
SCOUT_LLM_BASE_URL=http://localhost:11434/v1
SCOUT_LLM_API_KEY=no-key
SCOUT_LLM_MODEL=qwen3-14b
SCOUT_LLM_TEMPERATURE=0.0
SCOUT_LLM_TIMEOUT=120.0
SCOUT_LLM_MAX_RETRIES=5
SCOUT_LLM_AWS_REGION=us-west-2

# ── Indexing ──────────────────────────────────────────────────────
SCOUT_INDEXING_TOC_CHECK_PAGE_COUNT=20
SCOUT_INDEXING_MAX_PAGES_PER_NODE=10
SCOUT_INDEXING_MAX_TOKENS_PER_NODE=20000
SCOUT_INDEXING_MAX_RECURSION_DEPTH=10

# ── Enrichment ────────────────────────────────────────────────────
SCOUT_ENRICHMENT_ENABLE_NODE_SUMMARIES=true
SCOUT_ENRICHMENT_ENABLE_MEDICAL_CLASSIFICATION=true
SCOUT_ENRICHMENT_ENABLE_DOC_DESCRIPTION=false

# ── Retrieval ─────────────────────────────────────────────────────
SCOUT_RETRIEVAL_MAX_CONCURRENT=8
SCOUT_RETRIEVAL_TOP_K_NODES=5

# ── Extraction ────────────────────────────────────────────────────
SCOUT_EXTRACTION_MAX_CONTEXT_CHARS=8000
SCOUT_EXTRACTION_TIER1_BATCH_SIZE=20

# ── Persistence ───────────────────────────────────────────────────
SCOUT_PERSISTENCE_BACKEND=file
SCOUT_PERSISTENCE_STORE_PATH=./indexes
# SCOUT_PERSISTENCE_S3_BUCKET=my-bucket
# SCOUT_PERSISTENCE_S3_PREFIX=indexes/

# ── Tokenizer ─────────────────────────────────────────────────────
SCOUT_TOKENIZER_METHOD=approximate
SCOUT_TOKENIZER_MODEL=gpt-4o

# ── Prompts ───────────────────────────────────────────────────────
# Options: file, dynamodb
SCOUT_PROMPT_BACKEND=file
SCOUT_PROMPT_TABLE_NAME=scout-prompts
SCOUT_PROMPT_AWS_REGION=us-east-1
SCOUT_PROMPT_CACHE_TTL_SECONDS=300
SCOUT_PROMPT_CACHE_MAX_SIZE=500
SCOUT_PROMPT_FALLBACK_TO_FILE=true
SCOUT_PROMPT_DEFAULT_LOB=*
SCOUT_PROMPT_DEFAULT_DEPARTMENT=*
SCOUT_PROMPT_DEFAULT_USE_CASE=*
SCOUT_PROMPT_DEFAULT_PROCESS=*

# ── Observability ─────────────────────────────────────────────────
SCOUT_OBSERVABILITY_ENABLE_TRACING=false
SCOUT_OBSERVABILITY_OTLP_ENDPOINT=http://localhost:4317
SCOUT_OBSERVABILITY_SERVICE_NAME=scout-ai
SCOUT_OBSERVABILITY_LOG_LEVEL=INFO
