# ── LLM Provider ─────────────────────────────────────────────────
# Options: bedrock, openai, ollama, litellm
PAGEINDEX_LLM_PROVIDER=ollama
PAGEINDEX_LLM_BASE_URL=http://localhost:11434/v1
PAGEINDEX_LLM_API_KEY=no-key
PAGEINDEX_LLM_MODEL=qwen3-14b
PAGEINDEX_LLM_TEMPERATURE=0.0
PAGEINDEX_LLM_TIMEOUT=120.0
PAGEINDEX_LLM_MAX_RETRIES=5
PAGEINDEX_LLM_AWS_REGION=us-west-2

# ── Indexing ──────────────────────────────────────────────────────
PAGEINDEX_INDEXING_TOC_CHECK_PAGE_COUNT=20
PAGEINDEX_INDEXING_MAX_PAGES_PER_NODE=10
PAGEINDEX_INDEXING_MAX_TOKENS_PER_NODE=20000
PAGEINDEX_INDEXING_MAX_RECURSION_DEPTH=10

# ── Enrichment ────────────────────────────────────────────────────
PAGEINDEX_ENRICHMENT_ENABLE_NODE_SUMMARIES=true
PAGEINDEX_ENRICHMENT_ENABLE_MEDICAL_CLASSIFICATION=true
PAGEINDEX_ENRICHMENT_ENABLE_DOC_DESCRIPTION=false

# ── Retrieval ─────────────────────────────────────────────────────
PAGEINDEX_RETRIEVAL_MAX_CONCURRENT=8
PAGEINDEX_RETRIEVAL_TOP_K_NODES=5

# ── Extraction ────────────────────────────────────────────────────
PAGEINDEX_EXTRACTION_MAX_CONTEXT_CHARS=8000
PAGEINDEX_EXTRACTION_TIER1_BATCH_SIZE=20

# ── Persistence ───────────────────────────────────────────────────
PAGEINDEX_PERSISTENCE_BACKEND=file
PAGEINDEX_PERSISTENCE_STORE_PATH=./indexes
# PAGEINDEX_PERSISTENCE_S3_BUCKET=my-bucket
# PAGEINDEX_PERSISTENCE_S3_PREFIX=indexes/

# ── Tokenizer ─────────────────────────────────────────────────────
PAGEINDEX_TOKENIZER_METHOD=approximate
PAGEINDEX_TOKENIZER_MODEL=gpt-4o

# ── Prompts ───────────────────────────────────────────────────────
# Options: file, dynamodb
PAGEINDEX_PROMPT_BACKEND=file
PAGEINDEX_PROMPT_TABLE_NAME=pageindex-prompts
PAGEINDEX_PROMPT_AWS_REGION=us-east-1
PAGEINDEX_PROMPT_CACHE_TTL_SECONDS=300
PAGEINDEX_PROMPT_CACHE_MAX_SIZE=500
PAGEINDEX_PROMPT_FALLBACK_TO_FILE=true
PAGEINDEX_PROMPT_DEFAULT_LOB=*
PAGEINDEX_PROMPT_DEFAULT_DEPARTMENT=*
PAGEINDEX_PROMPT_DEFAULT_USE_CASE=*
PAGEINDEX_PROMPT_DEFAULT_PROCESS=*

# ── Observability ─────────────────────────────────────────────────
PAGEINDEX_OBSERVABILITY_ENABLE_TRACING=false
PAGEINDEX_OBSERVABILITY_OTLP_ENDPOINT=http://localhost:4317
PAGEINDEX_OBSERVABILITY_SERVICE_NAME=pageindex-rag
PAGEINDEX_OBSERVABILITY_LOG_LEVEL=INFO
