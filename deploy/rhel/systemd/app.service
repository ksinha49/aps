[Unit]
Description=Scout AI by Ameritas API Server
After=network.target

[Service]
Type=simple
User=scout
Group=scout
WorkingDirectory=/opt/scout-ai
EnvironmentFile=/opt/scout-ai/.env
ExecStart=/opt/scout-ai/venv/bin/uvicorn scout_ai.api.app:app --host 0.0.0.0 --port 8080
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
