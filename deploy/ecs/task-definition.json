{
  "family": "scout-ai",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "${ECS_CPU:-1024}",
  "memory": "${ECS_MEMORY:-2048}",
  "executionRoleArn": "${EXECUTION_ROLE_ARN}",
  "taskRoleArn": "${TASK_ROLE_ARN}",
  "containerDefinitions": [
    {
      "name": "scout-ai",
      "image": "${ECR_IMAGE_URI}",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {"name": "SCOUT_LLM_PROVIDER", "value": "bedrock"},
        {"name": "SCOUT_LLM_AWS_REGION", "value": "us-west-2"},
        {"name": "SCOUT_PERSISTENCE_BACKEND", "value": "s3"},
        {"name": "SCOUT_PERSISTENCE_S3_BUCKET", "value": "${S3_BUCKET}"},
        {"name": "SCOUT_OBSERVABILITY_ENABLE_TRACING", "value": "true"},
        {"name": "SCOUT_OBSERVABILITY_SERVICE_NAME", "value": "scout-ai"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/scout-ai",
          "awslogs-region": "${AWS_REGION:-us-west-2}",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD", "python", "/healthcheck.py"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 10
      }
    }
  ]
}
