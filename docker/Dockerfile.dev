FROM python:3.11-slim

WORKDIR /app

COPY pyproject.toml ./
RUN pip install --no-cache-dir -e ".[dev,api,otel]"

COPY src/ src/

ENV PYTHONUNBUFFERED=1

EXPOSE 8080

CMD ["uvicorn", "pageindex_rag.api.app:app", "--host", "0.0.0.0", "--port", "8080", "--reload"]
